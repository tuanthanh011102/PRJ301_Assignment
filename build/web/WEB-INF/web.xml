<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <context-param>
        <param-name>default_language</param-name>
        <param-value>vn</param-value>
    </context-param>
    <servlet>
        <description>This used for create new students</description>
        <servlet-name>AddStudentController</servlet-name>
        <servlet-class>controller.student.AddStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
        <init-param>
            <param-name>admin_user</param-name>
            <param-value>sonnt</param-value>
        </init-param>
        <init-param>
            <param-name>admin_pass</param-name>
            <param-value>xxx</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ListStudentsView</servlet-name>
        <servlet-class>view.student.ListStudentsView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateRectController</servlet-name>
        <servlet-class>controller.rect.CreateRectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentListController</servlet-name>
        <servlet-class>controller.student.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeController</servlet-name>
        <servlet-class>controller.authentication.WelcomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>controller.student.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateStudentController</servlet-name>
        <servlet-class>controller.student.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudentController</servlet-name>
        <servlet-class>controller.student.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaverequest.CreateLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLeaveRequestByDepartmentController</servlet-name>
        <servlet-class>controller.leaverequest.ViewLeaveRequestByDepartmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDummyController</servlet-name>
        <servlet-class>controller.dummy.ListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudentController</servlet-name>
        <url-pattern>/student/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStudentsView</servlet-name>
        <url-pattern>/view/student/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateRectController</servlet-name>
        <url-pattern>/rect/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentListController</servlet-name>
        <url-pattern>/student/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeController</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/student/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateStudentController</servlet-name>
        <url-pattern>/student/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudentController</servlet-name>
        <url-pattern>/student/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLeaveRequestByDepartmentController</servlet-name>
        <url-pattern>/leaverequest/findbydept</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListDummyController</servlet-name>
        <url-pattern>/dummy/list</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
